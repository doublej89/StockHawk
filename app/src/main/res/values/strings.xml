<resources xmlns:xliff="http://schemas.android.com/tools">
    <!--
         Used in Action Bar, and in AndroidManifest to tell the device the name of this app. -->
    <string name="app_name">Stock Hawk</string>

    <!--
         By convention, "action" denotes that this String will be used as the label for an Action,
         typically from the action bar. -->
    <string name="action_settings">Settings</string>
    <string name="action_change_units">Change Units</string>

    <!-- This is used as the title of the material dialog that pops up when the floating action button
         of the main activity is tapped -->
    <string name="symbol_search">Symbol Search</string>

    <!-- This text represents what the material dialog is 'asking' the user to do when he/she presses the
         floating action button -->
    <string name="content_test">Search for a Stock Symbol</string>

    <!-- This what the user sees in the input field of the material dialog before he/she has put in the
         stock symbol he/she wants to search -->
    <string name="input_hint">FB</string>

    <!-- The toast message that appears if the user has put in a stock symbol that is already in the database -->
    <string name="stock_saved_message">This stock is already saved!</string>
    <string name="input_prefill"></string>

    <!-- This is what shows up in the empty view when network is not available -->
    <string name="network_toast">Uh-oh! This app requires an internet connection</string>

    <!-- The following five are used to set content description for ui items -->
    <string name="a11y_stock_symbol">Stock symbol: <xliff:g id="symbol">%1$s</xliff:g></string>
    <string name="a11y_percent_change">Percentage change: <xliff:g id="percentage">%1$s</xliff:g></string>
    <string name="a11y_price_change">Price change: <xliff:g id="change">%1$s</xliff:g></string>
    <string name="a11y_bid_price">Bid price: <xliff:g id="bid_price">%1$s</xliff:g></string>
    <string name="a11y_add_new_stock">Add a new stock</string>

    <!-- This describes the linechart that appears when a particular item of the recycler view is clicked -->
    <string name="line_chart_name"><xliff:g id="symbol">%1$s</xliff:g> price fluctuation, every hour up till now</string>

    <!--This is the widget empty view message -->
    <string name="empty_stock_list">No stock information available</string>

    <!-- Name of the widget -->
    <string name="title_widget">StockHawk Widget</string>

    <!-- Key name for storing the latest status of the task run by stock task service in the shred preference -->
    <string name="pref_status_key">status key</string>

    <!-- The following three are used to display messages in the main activity empty view in case the latest
         data fetching task hasn't been successful -->
    <string name="empty_stock_list_server_down">Your stock quotes are out of date! The server is not returning data.</string>
    <string name="empty_stock_list_server_error">Your stock quotes are out of date! The server is not returning valid data. Please check for an updated version of StockHawk.</string>
    <string name="empty_line_chart_message">You need to provide data for the chart.</string>

    <!-- name of the y-axis in the linechart for a particular stock -->
    <string name="y_axis_label"><xliff:g id="symbol">%1$s</xliff:g> price</string>
</resources>
